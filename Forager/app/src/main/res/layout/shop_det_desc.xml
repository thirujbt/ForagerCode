<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/thirty"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/title_image"
        android:layout_alignBottom="@+id/title_image"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/five"
        android:layout_alignParentTop="true"
        android:src="@drawable/back"/>

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:layout_toRightOf="@+id/back"
        android:background="@android:color/transparent"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <WebView
        android:id="@+id/meal_plan_det_desc"
        android:layout_below="@+id/title_image"
        android:layout_above="@+id/active_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/active_plan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/btn_sign"
        android:text="@string/active_plan"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginBottom="@dimen/two"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginTop="@dimen/five"
        android:visibility="invisible"
        android:textColor="@color/btn_sign_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activate_plan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/btn_sign_text_color"
        android:text="@string/activate_plan"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginBottom="@dimen/two"

        android:layout_marginRight="@dimen/ten"
        android:layout_marginTop="@dimen/five"
        android:visibility="invisible"
        android:gravity="center"
        android:textColor="@color/btn_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>