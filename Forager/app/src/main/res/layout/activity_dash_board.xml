<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forager.meal.ui.activity.DashBoardActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/footer_ic_layout"
        android:layout_marginBottom="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/footer_ic_layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="@dimen/ten"
        android:paddingBottom="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home_ic"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:src="@drawable/home_ic"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/profile_ic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_ic"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/store_ic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/store_ic"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/more_ic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_ic"
            android:scaleType="centerInside"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
