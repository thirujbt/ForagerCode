<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.forager.meal.ui.fragment.YourProfileFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/five"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/load_profile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/thirty"
            android:layout_gravity="center"
            android:src="@drawable/profile_title" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- <LinearLayout
                     android:id="@+id/header_layout"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="center">

                     <ImageView
                         android:id="@+id/load_profile"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="@dimen/thirty"
                         android:src="@drawable/profile_title" />

                 </LinearLayout>-->

                <TextView
                    android:id="@+id/chg_txtprofile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:background="@color/white"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center"
                    android:linksClickable="false"
                    android:paddingLeft="@dimen/ten"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/chg_txtbody"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty"
                    android:layout_below="@+id/chg_txtprofile"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Body"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/chg_txtgoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/chg_txtbody"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Goal"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/plan_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/chg_txtgoal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/btn_sign"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/load_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/cal_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/btn_sign"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/load_layout1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/picker_title_bg_color"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <!--     <com.forager.pickzy.widget.RoundedImageView
                         android:id="@+id/load_details_img1"
                         android:layout_width="0dp"
                         android:layout_height="120dp"
                         android:layout_margin="10dp"
                         android:layout_gravity="center"
                         android:layout_weight="1"
                         android:background="@android:color/transparent"
                         android:src="@drawable/default_profile_img" />-->

                <com.forager.meal.widget.RoundedImageView
                    android:id="@+id/load_details_img"
                    android:layout_width="@dimen/one_twenty"
                    android:layout_height="@dimen/one_twenty"
                    android:layout_below="@+id/txt_country"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/picker_title_bg_color"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile" />

                <ImageView
                    android:id="@+id/load_details_img_dupl"
                    android:layout_width="@dimen/one_twenty"
                    android:layout_height="@dimen/one_twenty"
                    android:layout_below="@+id/txt_country"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/picker_title_bg_color"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/load_layout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/picker_title_bg_color"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/load_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@color/picker_title_bg_color"
                        android:gravity="center"
                        android:textColor="@color/btn_sign" />

                    <TextView
                        android:id="@+id/load_txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@color/picker_title_bg_color"
                        android:gravity="center"
                        android:textColor="@color/btn_sign" />

                    <TextView
                        android:id="@+id/load_txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@color/picker_title_bg_color"
                        android:gravity="center"
                        android:textColor="@color/btn_sign" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


