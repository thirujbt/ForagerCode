<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.forager.meal.ui.activity.TermsAndConditions"
    android:id="@+id/about">
  <!--  <ScrollView
        android:id="@+id/layout_about"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/topLayout"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_back"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/back"/>

                <TextView
                    android:id="@+id/title_about"
                    android:layout_width="match_parent"
                    android:text="About"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/fifteen"
                   />

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/three_hundered"
                android:layout_height="@dimen/one_fifty"
                android:id="@+id/image_about"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal" />



        </LinearLayout>

    <WebView
        android:id="@+id/about_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topLayout"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five" />

  <!--  </ScrollView>-->
</RelativeLayout>